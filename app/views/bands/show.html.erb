<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4">
      <div>
        <%= link_to bands_path do %>
          <i class="fa-solid fa-arrow-left text-dark"></i>
        <% end %>
      </div>

      <div class="card-trip">

  <%= cl_image_tag @band.photo.key, height: 300, width: 400, crop: :fill %>
  <div class="card-trip-infos">
    <div>
      <h1><%= @band.name %></h1>
      <strong>US$100/hr</strong>
      <p><%= @band.genre %></p>
      <p><%= @band.description %></p>
    </div>
  </div>
</div>

<% if @band.user == current_user %>
  <%= link_to "View Availability", band_availabilities_path(@band) %>
  <%= link_to "View Schedule", band_schedule_path(@band) %>
<% end %>


<br>

<div>
  <%= link_to "Book band", new_band_booking_path(@band) %>
</div>

<br><br>

    </div>
  </div>
</div>
