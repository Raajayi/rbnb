<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4">


      <div id="bands">
        <% @bands.each do |band| %>
          <div class="card-trip mt-3">
            <%= 'My band' if current_user == band.user %>
            <%= cl_image_tag band.photo.key, height: 300, width: 400, crop: :fill %>
            <div class="card-trip-infos">
              <div>
                <h2><%= band.name %></h2>
                <p><%= band.genre %></p>
              </div>
              <strong>US$100/hr</strong>
            </div>
            <span><%= link_to "View band", band, class: "btn btn-dark mb-3"%></span>
          </div>
        <% end %>
      </div>
      <br><br>
      <div><%= link_to "Add band", new_band_path, class: "btn btn-dark w-100" %></div>
      <br><br>

    </div>
  </div>
</div>
