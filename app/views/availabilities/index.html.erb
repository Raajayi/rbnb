<h1>Availability</h1>

<div id="availability">
  <% @availabilities.each do |availability| %>
    <div class="card-trip">
      From: <%= availability.start_time.strftime('%d-%m-%Y') %><br>
      Until: <%= availability.end_time.strftime('%d-%m-%Y') %>
    </div>
  <% end %>
</div>
<br><br>
<% if @band.user = current_user %>
  <%= link_to "Edit Availability", new_band_availability_path %>
<% end %>

<br><%= link_to "Back to Band", band_path(@band) %>

<br><br>
